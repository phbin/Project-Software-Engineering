<Window x:Class="QuanLyCuaHangDaQuy.Views.HumanResourceEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:UserControls="clr-namespace:QuanLyCuaHangDaQuy.Resources.UserControls"
        mc:Ignorable="d"
        Height="636" Width="676"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        FontFamily="Lato"
        x:Name="winHREdit"
        DataContext="{StaticResource HumanResourcesVM}">
    <Window.Resources>

        
        <Style TargetType="{x:Type Label}"
                x:Key="labelStyle">
            <Style.Setters>
                <Setter Property="Height" Value="18"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="Foreground" Value="#000000"/>
                <Setter Property="FontWeight" Value="Regular"/>
                
                <Setter Property="Padding" Value="0"/>

                <!--<Setter Property="ContentTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding}"/>
                                <TextBlock Text=" *" Foreground="Red"/>
                            </StackPanel>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>-->
            </Style.Setters>
        </Style>

        <Style TargetType="{x:Type TextBox}"
               BasedOn="{StaticResource MaterialDesignTextBox}">
            <Style.Setters>
                <Setter Property="Height" Value="28"/>
                <Setter Property="Width" Value="223"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Padding" Value="0 0 0 0 "/>
                <Setter Property="Foreground" Value="#000000"/>
            </Style.Setters>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsTextboxEmpty}" Value="False">
                    <Setter Property="Foreground" Value="#BCBCBC"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type materialDesign:SmartHint}">
            <Style.Setters>
                <Setter Property="Foreground" Value="#BCBCBC"/>
                <Setter Property="FontSize" Value="20"/>
                
            </Style.Setters>
        </Style>
    </Window.Resources>

    <Border CornerRadius="10" BorderBrush="{x:Null}"
            Background="#FFFFFF"
            BorderThickness="1">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
                <RowDefinition Height="103"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.ColumnSpan="2">
                <UserControls:ExitButton VerticalAlignment="Top"
                                         HorizontalAlignment="Right"
                                         Height="40"
                                         Width="40"
                                     Margin="15"/>
                <Border VerticalAlignment="Bottom"
                    HorizontalAlignment="Center"
                    BorderThickness="0 0 0 4" BorderBrush="#FCC871">
                    <TextBlock Text="HUMAN RESOURCES"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="32"
                       Margin="-4"
                       Foreground="#FCC871"
                       FontWeight="ExtraBold"
                       />
                </Border>
            </Grid>

            <!--Main-->

            <Grid Grid.Row="1" Margin="85 40 85 0 ">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" HorizontalAlignment="Left">

                    <!--Image-->
                    <Grid Margin="-40 0 0 0 ">
                        <Button VerticalAlignment="Bottom" Height="30"
                                Width="30"
                                Margin="120 0 0 0"
                                Style="{StaticResource MaterialDesignIconForegroundButton}">
                            <materialDesign:PackIcon Kind="Pencil" 
                                                     Foreground="#BCBCBC"/>
                        </Button>

                        <Ellipse Width="124"
                             Height="124">
                            <Ellipse.Fill>
                                <ImageBrush>
                                    <ImageBrush.ImageSource>
                                        <BitmapImage UriSource="\Resources\Images\b.jpg" />
                                    </ImageBrush.ImageSource>
                                </ImageBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>

                    <!--info-->
                    <Label 
                       x:Name="NameLabel"
                       Uid="10"
                       Style="{StaticResource labelStyle}" 
                       Content="Full name"
                       Margin="0 12 0 13">
                    </Label>
                    <TextBox
                        Uid="10"
                        x:Name="TxtbName"
                        materialDesign:HintAssist.Hint="Enter Name"  
                        HorizontalAlignment="Left">
                        <TextBox.Text>
                            <Binding Path="Fullname"
                                     UpdateSourceTrigger="PropertyChanged">
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <Label Style="{StaticResource labelStyle}" 
                               Content="Day of birth"
                               Margin="0 21 0 13"/>
                    <DatePicker
                        x:Uid="20"
                        Height="28"
                        Width="223"
                        HorizontalAlignment="Left"
                        x:Name="dpDayOfBirth">
                        <DatePicker.Text>
                            <Binding Path="DoB"
                                     UpdateSourceTrigger="PropertyChanged">
                            </Binding>
                        </DatePicker.Text>
                    </DatePicker>

                    <Label 
                        x:Name="SexLabel"
                        Style="{StaticResource labelStyle}" 
                       Content="Sex"
                       Margin="0 21 0 0"/>
                    <ComboBox
                        Height="41"
                        Width="225"
                        x:Name="cbSex">
                        <ComboBoxItem Content="Male"/>
                        <ComboBoxItem Content="Female"/>
                       
                    </ComboBox>

                </StackPanel>


                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <Label x:Name="AddressLabel"
                        Style="{StaticResource labelStyle}" 
                       Content="Address"
                       Margin="0 43 0 13"
                           Uid="40"/>
                    <TextBox 
                        x:Name="TxtbAddress"
                        Uid="40"
                        materialDesign:HintAssist.Hint="Enter Address"
                        HorizontalAlignment="Left">
                        <TextBox.Text>
                            <Binding Path="Address"
                                     UpdateSourceTrigger="PropertyChanged">
                            </Binding>
                        </TextBox.Text>
                    </TextBox>

                    <Label x:Name="PhoneLabel"
                        Style="{StaticResource labelStyle}" 
                       Content="Phone number"
                       Margin="0 34 0 13"
                           Uid="50"/>
                    <TextBox 
                        Uid="70"
                        x:Name="TxtbPhone"
                        materialDesign:HintAssist.Hint="Enter Phone Number"
                        HorizontalAlignment="Left" 
                        MaxLength="11">
                        <TextBox.Text>
                            <Binding Path="PhoneNumber"
                                     UpdateSourceTrigger="PropertyChanged">
                            </Binding>
                        </TextBox.Text>
                    </TextBox>

                    <Label x:Name="EmailLabel"
                           Uid="60"
                        Style="{StaticResource labelStyle}" 
                       Content="Email"     
                       Margin="0 21 0 13"/>
                    <TextBox 
                            Uid="60"
                           x:Name="TxtbEmail"
                           materialDesign:HintAssist.Hint="Enter Email"
                           HorizontalAlignment="Left"
                           >
                        <TextBox.Text>
                            <Binding Path="Email"
                                     UpdateSourceTrigger="PropertyChanged">
                            </Binding>
                        </TextBox.Text>
                    </TextBox>

                    <Label x:Name="IDLabel"
                        Style="{StaticResource labelStyle}" 
                       Content="Personal ID"
                       Margin="0 21 0 13"
                            Uid="70"/>
                    <TextBox 
                        x:Name="TxtbID"
                        Uid="70"
                        materialDesign:HintAssist.Hint="Enter Personal ID"
                        HorizontalAlignment="Left">
                        <TextBox.Text>
                            <Binding Path="ID"
                                     UpdateSourceTrigger="PropertyChanged">
                            </Binding>
                        </TextBox.Text>
                    </TextBox>

                </StackPanel>
            </Grid>
            
            <!--BUTTON-->
            <Grid Grid.Row="2">
                <Button x:Name="btSave"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    materialDesign:ButtonAssist.CornerRadius="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="187"
                    Height="45"
                    Content="Confirm"
                    FontSize="21"
                    Background="#FCC871"
                    Foreground="#FFFFFF"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding ElementName=winHREdit}"/>


        </Grid>
        </Grid>
    </Border>
</Window>
