<Window x:Class="QuanLyCuaHangDaQuy.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyCuaHangDaQuy"
        xmlns:viewmodels="clr-namespace:QuanLyCuaHangDaQuy.Viewmodels"        
        xmlns:UserControls="clr-namespace:QuanLyCuaHangDaQuy.Resources.UserControls"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        x:Name="wdAdmin"
        ResizeMode="NoResize"
        Title="MainWindow" Height="768" Width="1080"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        DataContext="{StaticResource AdminVM}">
    <Window.Resources>
        <Style x:Key="MenuBarBtStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="21"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="20,0,20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" 
                                CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#E0A645"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#E0A645"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#E0A645"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#E0A645"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="#E0A645"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#E0A645"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TextHeader" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="22.5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Lato"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>

        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="87"/>
            <RowDefinition />
        </Grid.RowDefinitions>






        <!--menu-->
        <Grid Grid.Row="0"
            x:Name="grdMenu" 
            Height="87" Width="auto" Background="#FF585858"
            materialDesign:ShadowAssist.ShadowDepth="Depth0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,0,20,0">
                <Button 
                    x:Name="btHR"
                    Content="HR" 
                    Uid="10"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="{Binding ElementName=wdAdmin}"
                    Style="{DynamicResource MenuBarBtStyle}" >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseMove">
                            <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                   CommandParameter="{Binding ElementName=btHR}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>

                <Button 
                    x:Name="btProduct"
                    Uid="20"
                    Content="Product"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="{Binding ElementName=wdAdmin}"
                    Style="{DynamicResource MenuBarBtStyle}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseMove">
                            <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                   CommandParameter="{Binding ElementName=btProduct}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
                <Button 
                    x:Name="btCustomer"
                    Content="Customer"
                    Uid="30"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="{Binding ElementName=wdAdmin}"
                    Style="{DynamicResource MenuBarBtStyle}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseMove">
                            <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                   CommandParameter="{Binding ElementName=btCustomer}"/>
                        </i:EventTrigger>
                        <i:EventTrigger EventName="Mouseleave">
                            <i:InvokeCommandAction Command="{Binding MoveLeaveCommand}"
                                                   CommandParameter="{Binding ElementName=btCustomer}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
                <Button 
                    x:Name="btService"
                    Content="Service"
                    Uid="40"
                    Command="{Binding NavigateCommand}"                   
                    CommandParameter="{Binding ElementName=wdAdmin}"
                    Style="{DynamicResource MenuBarBtStyle}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseMove">
                            <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                   CommandParameter="{Binding ElementName=btService}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>

                <Button 
                    x:Name="btImportation"
                    Content="Importation"
                    Uid="50"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="{Binding ElementName=wdAdmin}"
                    Style="{DynamicResource MenuBarBtStyle}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseMove">
                            <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                   CommandParameter="{Binding ElementName=btImportation}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>

                <Button 
                    x:Name="btDiscount"
                    Content="Discount"
                    Uid="60"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="{Binding ElementName=wdAdmin}"
                    Style="{DynamicResource MenuBarBtStyle}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseMove">
                            <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                   CommandParameter="{Binding ElementName=btDiscount}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>

                <Button 
                    x:Name="Report"
                    Content="Report" 
                    Uid="70"
                    Command="{Binding NavigateCommand}"
                    Style="{DynamicResource MenuBarBtStyle}"/>
            </StackPanel>
            <Grid VerticalAlignment="Center"
                  HorizontalAlignment="Left">
                <TextBlock Text="Hi Tuan"
                           FontSize="24"
                           Foreground="White" Margin="40,0,0,-1" HorizontalAlignment="Left" Width="109"></TextBlock>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="106"/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <Grid Grid.Row="0" Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="270*"/>
                    <ColumnDefinition Width="19*"/>
                    <ColumnDefinition Width="251*"/>
                </Grid.ColumnDefinitions>
                <Button
                    Margin="17,29,0,29"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Height="48"
                    Width="142"
                    materialDesign:ButtonAssist.CornerRadius="18"
                    ToolTip="Add"
                    Background="#FCC871"
                    Foreground="Black"
                    HorizontalAlignment="Left"
                    BorderBrush="#BCBCBC">
                    <Grid Width="auto">
                        <TextBlock Text="Add"
                                   FontSize="26"
                                   Foreground="White"
                                   HorizontalAlignment="Center" 
                                   Width="100"
                                   Height="34" VerticalAlignment="Top" Margin="0,6,0,0" />
                        <Border CornerRadius="90"
                                Width="28"
                                Height="28"
                                Background="White" Margin="36,2,-27.2,1.2" Grid.RowSpan="2">
                            <materialDesign:PackIcon Kind="Plus" BorderThickness="2" Foreground="#FCC871"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Center"
                                                     Height="28"
                                                     Width="28" />
                        </Border>
                    </Grid>

                </Button>
                <Border BorderThickness="2"
                        CornerRadius="25"
                        BorderBrush="#ABABAB"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Width="474"
                        Height="46"
                        Margin="11,0,0,0" Grid.Column="2">
                    <Grid HorizontalAlignment="Right"
                      Width="400">
                        <TextBox 
                            x:Name="txtSearchSaleGoods"
                            materialDesign:HintAssist.Hint="Tim sthing"
                            materialDesign:HintAssist.Foreground="black"
                            FontSize="18" 
                            Height="46"
                            MaxLines="1"
                            FontWeight="Medium" 
                            HorizontalContentAlignment="Left" 
                            VerticalContentAlignment="Center"
                            Foreground="#ABABAB" 
                            Background="Transparent"
                            BorderThickness="0" 
                            Margin="-45,-3,45,0.2"
                           />
                        <Button 
                            IsDefault="True"
                            Height="30"
                            Width="30"
                            Margin="0,3,10,2"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            VerticalAlignment="Center"
                            FocusVisualStyle="{x:Null}"
                            HorizontalAlignment="Right"
                            Padding="0" >
                            <materialDesign:PackIcon 
                                Kind="Magnify" 
                                Height="24"
                                Width="31" 
                                Foreground="#ABABAB"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>


            <!--HR grid-->
            <Grid Grid.Row="1"
                  Margin="17,0,17,49"
                  Visibility="Visible"
                  x:Name="grHR">
                <Grid.RowDefinitions>
                    <RowDefinition Height="58"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0"
                        BorderThickness="0"
                        CornerRadius="10,10,0,0"
                        Background="#FCC871">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="2.5*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1.25*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                                Text="No." 
                                Grid.Column="0"
                                Style="{StaticResource TextHeader}"/>
                        <TextBlock
                                Text="Name" 
                                Grid.Column="1"
                                Style="{StaticResource TextHeader}"/>
                        <TextBlock
                                Text="Phone number" 
                                Grid.Column="2"
                                Style="{StaticResource TextHeader}" />
                        <TextBlock
                                Text="ID Number" 
                                Grid.Column="3"
                                Style="{StaticResource TextHeader}"/>
                        <TextBlock
                                Text="Type" 
                                Grid.Column="4"
                                Style="{StaticResource TextHeader}"/>
                        <TextBlock
                                Text="Account" 
                                Grid.Column="5"
                                Style="{StaticResource TextHeader}"/>
                    </Grid>
                </Border>
                <Border
                        Grid.Row="1"
                        BorderBrush="#ABABAB"
                        Background="#FBFBFB"
                        CornerRadius="0,0,10,10"
                        BorderThickness="2,0,2,2" Grid.RowSpan="2" 
                        >
                </Border>
            </Grid>

            <!--product grid-->
            <Grid Grid.Row="1"
                  Margin="23,0,23,49"
                  Visibility="Collapsed"
                  x:Name="grProduct">
                <Grid.RowDefinitions>
                    <RowDefinition Height="58"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0"
                        BorderThickness="0"
                        CornerRadius="10,10,0,0"
                        Background="#FCC871">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="2.5*"/>
                            <ColumnDefinition Width="2.5*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1.25*"/>
                            <ColumnDefinition Width="1.75*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                                Text="No." 
                                Grid.Column="0"
                                Style="{StaticResource TextHeader}"/>
                        <TextBlock
                                Text="Name" 
                                Grid.Column="1"
                                Style="{StaticResource TextHeader}"
                                Margin="20,0,0,0"
                                HorizontalAlignment="Left"/>
                        <TextBlock
                                Text="Category" 
                                Grid.Column="2"
                                Style="{StaticResource TextHeader}" />
                        <TextBlock
                                Text="Unit" 
                                Grid.Column="3"
                                Style="{StaticResource TextHeader}"/>
                        <TextBlock
                                Text="Quantity" 
                                Grid.Column="4"
                                Style="{StaticResource TextHeader}"/>
                        <TextBlock
                                Text="Unit Price" 
                                Grid.Column="5"
                                Style="{StaticResource TextHeader}"/>

                    </Grid>
                </Border>
                <Border
                        Grid.Row="1"
                        BorderBrush="#ABABAB"                        
                        Background="#FBFBFB"
                        CornerRadius="0,0,10,10"
                        BorderThickness="2,0,2,2" 
                        >
                </Border>
            </Grid>

            <!--Customer Grid-->
            <Grid Grid.Row="1"
                  Margin="17,0,17,49"
                  Visibility="Collapsed"
                  x:Name="grCustomer">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="37*"/>
                    <ColumnDefinition Width="480*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="58"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0"
                        BorderThickness="0"
                        CornerRadius="10,10,0,0"
                        Background="#FCC871" Grid.ColumnSpan="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="2.5*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2.5*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                                Text="No." 
                                Grid.Column="0"
                                Style="{StaticResource TextHeader}"/>
                        <TextBlock
                                Text="Name" 
                                Grid.Column="1"
                                Style="{StaticResource TextHeader}"
                                Margin="20,0,0,0"/>
                        <TextBlock
                                Text="Phone number" 
                                Grid.Column="2"
                                FontSize="26"
                                Style="{StaticResource TextHeader}" />
                        <TextBlock
                                Text="Email" 
                                Grid.Column="3"
                                Style="{StaticResource TextHeader}"/>
                        <TextBlock
                                Text="Point" 
                                Grid.Column="4"
                                Style="{StaticResource TextHeader}"/>
                    </Grid>
                </Border>
                <Border
                        Grid.Row="1"
                        BorderBrush="#ABABAB"
                        Background="#FBFBFB"                    
                        CornerRadius="0,0,10,10"
                        BorderThickness="2,0,2,2" Grid.ColumnSpan="2">
                    <StackPanel x:Name="stkCustomer">
                        <UserControls:CustomerControl/>
                        <UserControls:CustomerControl/>
                        <UserControls:CustomerControl/>
                    </StackPanel>

                </Border>
            </Grid>

            <!--Discount grid-->
            <Grid Grid.Row="1"
                  Margin="23,0,23,49"
                  Visibility="Collapsed"
                  x:Name="grDiscount">
                <Grid.RowDefinitions>
                    <RowDefinition Height="58"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0"
                        BorderThickness="0"
                        CornerRadius="10,10,0,0"
                        Background="#FCC871">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="125"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                                Text="No." 
                                Grid.Column="0"
                                Style="{StaticResource TextHeader}"/>
                        <TextBlock
                                Text="Discount Code" 
                                Grid.Column="1"
                                Style="{StaticResource TextHeader}"/>
                        <TextBlock
                                Text="Discount Precent" 
                                Grid.Column="2"
                                Style="{StaticResource TextHeader}" />
                    </Grid>
                </Border>
                <Border
                        Grid.Row="1"
                        BorderBrush="#ABABAB"
                        Background="#FBFBFB"
                        CornerRadius="0,0,10,10"
                        BorderThickness="2,0,2,2" 
                        >
                </Border>
            </Grid>

            <!--Service Grid-->
            <Grid Grid.Row="1"
                  Margin="23,0,23,49"
                  Visibility="Collapsed"
                  x:Name="grService">
                <Grid.RowDefinitions>
                    <RowDefinition Height="58"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0"
                        BorderThickness="0"
                        CornerRadius="10,10,0,0"
                        Background="#FCC871">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="125"/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>


                            <ColumnDefinition Width="600"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                                Text="No." 
                                Grid.Column="0"
                                Style="{StaticResource TextHeader}"/>
                        <TextBlock
                                Text="" 
                                Grid.Column="1"
                                Style="{StaticResource TextHeader}"
                                Margin="20,0,0,0"/>
                        <TextBlock
                                Text="" 
                                Grid.Column="2"
                                Style="{StaticResource TextHeader}" />
                    </Grid>
                </Border>
                <Border
                        Grid.Row="1"
                        BorderBrush="#ABABAB"
                        Background="#FBFBFB"
                        CornerRadius="0,0,10,10"
                        BorderThickness="2,0,2,2" 
                        >
                </Border>
            </Grid>

            <!--Importation grid-->
            <Grid Grid.Row="1"
                  Margin="23,0,23,49"
                  Visibility="Collapsed"
                  x:Name="grImportation">
                <Grid.RowDefinitions>
                    <RowDefinition Height="58"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0"
                        BorderThickness="0"
                        CornerRadius="10,10,0,0"
                        Background="#FCC871">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition/>

                            <ColumnDefinition Width="600"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                                Text="No." 
                                Grid.Column="0"
                                Style="{StaticResource TextHeader}"/>
                        <TextBlock
                                Text="Name" 
                                Grid.Column="1"
                                Style="{StaticResource TextHeader}"
                                Margin="20,0,0,0"/>
                        <TextBlock
                                Text="Price" 
                                Grid.Column="2"
                                Style="{StaticResource TextHeader}" />
                        <TextBlock
                            Text="Time"
                            Grid.Column="3"
                            Style="{StaticResource TextHeader}"/>
                    </Grid>
                </Border>
                <Border
                        Grid.Row="1"
                        BorderBrush="#ABABAB"
                        Background="#FBFBFB"
                        CornerRadius="0,0,10,10"
                        BorderThickness="2,0,2,2" 
                        >
                </Border>
            </Grid>

            <!--report grid-->

        </Grid>
    </Grid>
</Window>
